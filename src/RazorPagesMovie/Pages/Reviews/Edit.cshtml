@page
@model RazorPagesMovie.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.Id" />
            <div class="form-group">
                <label asp-for="Review.Comment" class="control-label"></label>
                <textarea asp-for="Review.Comment" class="form-control"></textarea>
                <span asp-validation-for="Review.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Stars" class="control-label"></label>
                <input asp-for="Review.Stars" class="form-control" />
                <span asp-validation-for="Review.Stars" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-movieid="@Model.Review.MovieId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
